void ukuran(int lebar,int tinggi)
{

    if(tinggi == 0) tinggi =1;
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    gluPerspective(20.0,lebar/tinggi,5.0,700.0);
    glTranslatef(0.0,-5.0,-300.0);
    glMatrixMode(GL_MODELVIEW);
}
